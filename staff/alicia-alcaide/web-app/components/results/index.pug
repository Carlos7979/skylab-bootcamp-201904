mixin results(items)

    if items.length > 0
        ul
            each item in items
                li  
                    a(href=`${item.url}`)
                        h2= item.title
                    a(href=`${item.urlToggle}`)  
                        if item.isFav
                            i.fas.fa-heart
                        else    
                            i.far.fa-heart
                    img(src=`${item.image}`)
                    span= item.price
    else
        p= 'No resutls'